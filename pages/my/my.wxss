page {
  background: #f5f6f7;
}

/* 封面 */

.header {
  width: 100%;
  height: 350rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.header image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

/* 导航 */

.navs {
  width: 100%;
  background: #fff;
  border-bottom: solid 1px #ccc;
  margin-top: 10rpx;
}

.navs .nav {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-top: solid 1rpx #ccc;
}

.navs .nav view {
  width: 94%;
  margin: auto;
  display: flex;
  justify-content: space-between;
}

.navs .nav text {
  font-size: 28rpx;
  color: #555;
}
/*退出*/

.logout {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  margin-top: 20rpx;
  background: #fff;
  border-top: solid 1px #ccc;
  border-bottom: solid 1px #ccc;
  font-size: 28rpx;
  color: #555;
}
